{
  "name": "urbaniz-typescript",
  "version": "1.0.0",
  "description": "Site oficial da Urbaniz reconstruído com TypeScript e Node.js",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "concurrently \"nodemon dist/index.js\" \"webpack --watch\"",
    "build": "tsc && webpack",
    "clean": "rimraf dist",
    "copy-assets": "copyfiles -u 1 public/**/* dist",
    "postbuild": "npm run copy-assets"
  },
  "keywords": [
    "urbaniz",
    "construção",
    "tecnologia",
    "typescript",
    "node"
  ],
  "author": "Urbaniz",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.25",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-loader": "^9.5.1",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  }
}