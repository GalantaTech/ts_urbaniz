{
  "name": "ts_urbaniz",
  "version": "1.0.0",
  "description": "Reconstrução do site oficial da Urbaniz utilizando TypeScript, Node.js e Express",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "build": "mkdir -p dist && cp -r public dist/ && tsc",
    "clean": "rimraf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GalantaTech/ts_urbaniz.git"
  },
  "keywords": [
    "typescript",
    "express",
    "webpack",
    "urbaniz"
  ],
  "author": "GalantaTech",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}